{
  "name": "vmail",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "description": "使用 Cloudflare email worker 实现的临时电子邮件服务",
  "scripts": {
    "build": "pnpm --filter frontend run build",
    "deploy": "pnpm build && wrangler deploy",
    "dev": "wrangler dev",
    "worker:dev": "pnpm --filter worker run dev",
    "frontend:dev": "pnpm --filter frontend run dev",
    "format": "prettier --write ."
  },
  "keywords": [
    "vmail",
    "temp-email",
    "cloudflare-worker"
  ],
  "author": "oiov",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "wrangler": "^3.114.15"
  },
  "dependencies": {
    "@libsql/client": "0.4.0-pre.7",
    "@tanstack/react-query": "^5.90.3",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.29.5",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.25.76"
  }
}